[Unit]
Description=Airflow scheduler daemon
After=syslog.target network.target
[Service]
PIDFile=/home/{{ airflow_user }}/scheduler.pid
User={{ airflow_user }}
Group={{ airflow_group }}
Type=forking
ExecStart=/bin/bash -c 'export AIRFLOW_HOME=/home/{{ airflow_user }}/airflow ; /home/{{ airflow_user }}/.local/bin/airflow scheduler -D'
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
RuntimeDirectory={{ airflow_user }}
WorkingDirectory=/home/{{ airflow_user }}
Restart=on-failure
RestartSec=42s
PrivateTmp=true
[Install]
WantedBy=multi-user.target